<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= raw(@article.description) %>
</p>


<% unless @article.tags.empty? %>
<p>
  <strong>Tags:</strong>
   <%= @article.tags.map{|t|t.name}.join(', ')%>
</p>  
<% end %>




<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
